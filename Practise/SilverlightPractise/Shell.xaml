<navigation:Page x:Class="SilverlightPractise.Shell" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           mc:Ignorable="d"
                 xmlns:prisms="http://www.codeplex.com/prism"
           xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
           d:DesignWidth="640" d:DesignHeight="480"
           Title="Shell Page">
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <ContentControl Grid.Row="0"  prisms:RegionManager.RegionName="HeaderRegion"></ContentControl>
        <ContentControl Grid.Row="1"  prisms:RegionManager.RegionName="MainRegion"></ContentControl>
        <TextBlock Text=" hello!" Grid.Row="1"></TextBlock>
    </Grid>
</navigation:Page>
